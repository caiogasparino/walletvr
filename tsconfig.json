{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-native",
    "baseUrl": "./src", // Updated baseUrl to "./src"
    "esModuleInterop": true,
    "paths": {
      "@animations": ["animations"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@navigation/*": ["navigation/*"],
      "@UIKit": ["components/UIKit"],
      "@routes/*": ["routes/*"],
      "@screens/*": ["screens/*"]
    }
  },
  "include": ["src"]
}
